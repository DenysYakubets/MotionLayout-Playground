<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@+id/tvProfileName">

            <CustomAttribute
                app:attributeName="TextColor"
                app:customColorValue="@color/black" />

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/toolbar">

            <PropertySet app:alpha="1" />

        </Constraint>

        <Constraint android:id="@+id/background">

            <PropertySet app:alpha="1" />

        </Constraint>

        <Constraint android:id="@+id/ivProfile">

            <Layout
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar"
                app:layout_height="35dp"
                app:layout_marginStart="56dp"
                app:layout_width="35dp" />

        </Constraint>

        <Constraint android:id="@+id/tvProfileName">

            <Layout
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toEndOf="@id/ivProfile"
                app:layout_constraintTop_toTopOf="@+id/toolbar"
                app:layout_height="wrap_content"
                app:layout_marginStart="16dp"
                app:layout_width="wrap_content" />

            <CustomAttribute
                app:attributeName="TextColor"
                app:customColorValue="@color/white" />

        </Constraint>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:target="@+id/toolbar" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:target="@+id/background" />

            <KeyPosition
                app:framePosition="20"
                app:percentX="0"
                app:percentY="0"
                app:sizePercent="0"
                app:target="@+id/ivProfile" />

            <KeyPosition
                app:framePosition="45"
                app:percentX="0.9"
                app:sizePercent="0.90"
                app:target="@+id/ivProfile" />

            <KeyPosition
                app:framePosition="20"
                app:percentX="0"
                app:percentY="0"
                app:target="@+id/tvProfileName" />

            <KeyAttribute
                app:framePosition="50"
                app:target="@+id/tvProfileName">
                <CustomAttribute
                    app:attributeName="TextColor"
                    app:customColorValue="@color/black" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="80"
                app:target="@+id/tvProfileName">
                <CustomAttribute
                    app:attributeName="TextColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>
        </KeyFrameSet>

    </Transition>
</MotionScene>